{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "rootDir": "./src"
    },
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "!./node_modules/**/*.ts"
    ],
    "files": [
      "./src/index.ts",
      "./src/arrays.ts",
      "./src/objects.ts",
      "./src/promises.ts",
      "./src/browser/index.ts",
      "./src/browser/utils.ts",
      "./src/browser/html.ts",
      "./src/utils.ts",
      "./src/strings.ts",
      "./src/request.ts",
      "./src/debug.ts"
    ]
}